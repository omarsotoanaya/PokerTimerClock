<Window x:Class="PokerTimerClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerTimerClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="725" WindowStartupLocation="CenterScreen" IsEnabled="True" Cursor="SizeAll" ResizeMode="CanResizeWithGrip">
    <Grid Margin="0,-28,0,-3" >
        <Grid HorizontalAlignment="Left" Width="717">
            <Grid Focusable="True" IsHitTestVisible="True" IsManipulationEnabled="True" RenderTransformOrigin="0.481,0.317" ScrollViewer.VerticalScrollBarVisibility="Disabled" Height="523" VerticalAlignment="Bottom" >
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Label x:Name="lblClock" Content="..." HorizontalAlignment="Left" Margin="214,155,0,0" VerticalAlignment="Top" Width="310" FontSize="48" FontWeight="Bold" FontFamily="Tahoma" HorizontalContentAlignment="Center"/>
                <Button x:Name="btnStart" Content="Start Clock" HorizontalAlignment="Left" Margin="313,0,0,157" VerticalAlignment="Bottom" Click="button_Click" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="114" Height="39"/>

            </Grid>
        </Grid>
    </Grid>
</Window>
